<Page
    x:Class="GraphicsProject.Views.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <SplitView x:Name="MySplitView" DisplayMode="CompactOverlay" IsPaneOpen="False" 
               CompactPaneLength="50" OpenPaneLength="300">
        <SplitView.Pane>
            <StackPanel Background="Beige">
                <Button x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                        Width="50" Height="50" Background="Transparent" Click="HamburgerButton_Click"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="NewImgButton" FontFamily="Segoe MDL2 Assets" Content="&#xE1DA;"
                            Width="50" Height="50" Background="Transparent"/>
                    <TextBlock Text="Nowy" FontSize="18" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="OpenImgButton" FontFamily="Segoe MDL2 Assets" Content="&#xE197;"
                            Width="50" Height="50" Background="Transparent"/>
                    <TextBlock Text="Otwórz" FontSize="18" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="SaveImgButton" FontFamily="Segoe MDL2 Assets" Content="&#xE105;"
                            Width="50" Height="50" Background="Transparent"/>
                    <TextBlock Text="Zapisz" FontSize="18" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid>
                <Grid Row="0" Background="Gray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Canvas Grid.Column="0" Name="DrawingCanvas" Background="White"
                            PointerPressed="Canvas_OnPointerPressed" 
                            PointerReleased="Canvas_OnPointerReleased" />
                    <Grid Grid.Column="1" Background="Silver">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="5*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Name="ButtonLineSelect" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_OnLineSelect">
                                <Image Source="../Assets/line.png"/>
                            </Button>
                            <Button Name="ButtonRectangleSelect" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_OnRectangleSelect">
                                <Image Source="../Assets/rectangle.png"/>
                            </Button>
                            <Button Name="ButtonEllipseSelect" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_OnEllipseSelect">
                                <Image Source="../Assets/ellipse.png"/>
                            </Button>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid Padding="0,0,30,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="X:"/>
                                    <TextBox Name="XPosition" Grid.Column="1" KeyDown="XPosition_OnKeyDown" HorizontalAlignment="Left" VerticalAlignment="Center" Width="50"/>
                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Y:"/>
                                    <TextBox Name="YPosition" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="50"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Szer:"/>
                                    <TextBox Name="Width" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="50" Text="12313"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Wys:"/>
                                    <TextBox Name="Height" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="50"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>
